<%# Edit Entries Form %>
<div class="d-flex align-items-center flex-column">
  <h2>Edit entry</h2>
  <%# Model Information %>
  <%= form_with model: @test, url: edit_update_path(@test), method: :put, local:true do |form| %>
    <%# Date %>
    <div class="mb-2">
      <%= form.label :date %>
      <%= form.text_field :date,  class: "form-control", placeholder: "Enter date", style: "width: 500px;" %>
    </div>
    <%# Distance %>
    <div class="mb-2">
      <%= form.label :distance %>
      <%= form.text_field :distance, class: "form-control", placeholder: "Enter distance"%>
    </div>
    <%# Duration %>
    <div class="mb-2">
      <%= form.label :duration %>
      <%= form.text_field :duration, class: "form-control", placeholder: "Enter duration"%>
    </div>
    <%# Pace %>
    <div class="mb-2">
      <%= form.label :pace %>
      <%= form.text_field :pace, class: "form-control", placeholder: "Enter pace"%>
    </div>
    <%# Surface %>
    <div class="mb-2">
      <%= form.label :surface %>
      <%= form.text_field :surface, class: "form-control", placeholder: "Enter surface type"%>
    </div>
    <%# Description %>
    <div class="mb-2">
      <%= form.label :description %>
      <%= form.text_field :description, class: "form-control", placeholder: "Add description"%>
    </div>
    <%# Edit Button %>
    <div class="mt-4 d-flex justify-content-center">
      <%= form.submit "Update", class: "btn btn-primary", style: "width: 200px"%>
    </div>
  <% end %>
</div>
