<h2>Run Logs</h2>

<%= search_form_for @q, url: display_path, method: :get do |f| %>
  <div class="field">
    <%= f.label :surface_cont, "Search by Surface" %>
    <%= f.text_field :surface_cont %>
  </div>
  <%= f.submit "Search", class: "btn btn-primary m-3"%>
<% end %>

<%= form_tag(display_destroy_path, method: :delete) do %>
  <%= text_field_tag :id, nil, placeholder: 'Enter ID to delete' %>
  <%= submit_tag 'Delete Record', class: 'btn btn-danger' %>
<% end %>

<table class="table table-bordered">
<thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Date</th>
      <th scope="col">Distance</th>
      <th scope="col">Duration</th>
      <th scope="col">Pace</th>
      <th scope="col">Surface</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
<% @tests.each do |test| %>
    <tr>
      <td><%= test.id %></td>
      <td><%= test.date %></td>
      <td><%= test.distance %> km's</td>
      <td><%= test.duration %></td>
      <td><%= test.pace %> per km</td>
      <td><%= test.surface %></td>
      <td><%= test.description %></td>
      <td><%= link_to "Edit", edit_update_path(test), class: "btn btn-warning" %></td>
    </tr>
<% end %>
  </tbody>
</table>